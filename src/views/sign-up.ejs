<div class="flex-grow flex flex-col items-center sm:justify-center gap-5 p-5">
  <form
    id="sign-up-form"
    data-errors="<%= JSON.stringify(errors) || {} %>"
    action="/auth/sign-up"
    method="post"
    class="w-full max-w-md flex flex-col gap-3 sm:px-12 sm:py-14 sm:shadow-md sm:border sm:border-gray-200 dark:sm:border-gray-800 sm:rounded-3xl"
    novalidate
  >
    <div class="mb-4">
      <h1 class="text-center text-3xl">Sign up</h1>
    </div>

    <div class="flex flex-col gap-1">
      <label
        for="name"
        class="capitalize text-sm font-medium text-gray-600 dark:text-gray-400"
      >
        Name
      </label>
      <input
        type="text"
        id="name"
        name="name"
        value="<%= locals.oldInput?.name || '' %>"
        autocomplete="name"
        class="border border-gray-300 dark:border-gray-700 dark:bg-gray-800 px-3 py-2 outline-none rounded-sm dark:focus:bg-gray-900 focus:border-lime-500 focus:ring-2 focus:ring-lime-50 dark:focus:border-lime-500 dark:focus:ring-lime-950 transition-colors duration-200"
      />
    </div>

    <div class="flex flex-col gap-1">
      <label
        for="email"
        class="capitalize text-sm font-medium text-gray-600 dark:text-gray-400"
      >
        Email
      </label>
      <input
        type="email"
        id="email"
        name="email"
        value="<%= locals.oldInput?.email || '' %>"
        autocomplete="email"
        required
        class="border border-gray-300 dark:border-gray-700 dark:bg-gray-800 px-3 py-2 outline-none rounded-sm dark:focus:bg-gray-900 focus:border-lime-500 focus:ring-2 focus:ring-lime-50 dark:focus:border-lime-500 dark:focus:ring-lime-950 transition-colors duration-200"
      />
    </div>

    <div class="flex flex-col gap-1">
      <label
        for="password"
        class="capitalize text-sm font-medium text-gray-600 dark:text-gray-400"
      >
        Password
      </label>
      <input
        type="password"
        id="password"
        name="password"
        value="<%= locals.oldInput?.password || '' %>"
        autocomplete="new-password"
        required
        class="border border-gray-300 dark:border-gray-700 dark:bg-gray-800 px-3 py-2 outline-none rounded-sm dark:focus:bg-gray-900 focus:border-lime-500 focus:ring-2 focus:ring-lime-50 dark:focus:border-lime-500 dark:focus:ring-lime-950 transition-colors duration-200"
      />
    </div>

    <div class="flex flex-col gap-1">
      <label
        for="confirm_password"
        class="capitalize text-sm font-medium text-gray-600 dark:text-gray-400"
      >
        Confirm Password
      </label>
      <input
        type="password"
        id="confirm_password"
        name="confirm_password"
        value="<%= locals.oldInput?.confirm_password || '' %>"
        autocomplete="new-password"
        required
        class="border border-gray-300 dark:border-gray-700 dark:bg-gray-800 px-3 py-2 outline-none rounded-sm dark:focus:bg-gray-900 focus:border-lime-500 focus:ring-2 focus:ring-lime-50 dark:focus:border-lime-500 dark:focus:ring-lime-950 transition-colors duration-200"
      />
    </div>

    <div class="flex flex-col mt-3">
      <button
        type="submit"
        class="w-full bg-lime-600 hover:bg-lime-500 py-2 outline-none text-gray-50 font-medium rounded-sm cursor-pointer transition-colors duration-200 focus:ring-2 focus:ring-neutral-400 focus:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed"
      >
        Sign up
      </button>
    </div>

    <div class="mt-3">
      <p class="text-center text-sm">
        Already have an account?
        <a
          href="/auth/sign-in"
          class="underline font-semibold focus:outline-none focus:ring-2 focus:ring-gray-400"
        >
          Sign in
        </a>
      </p>
    </div>
  </form>
</div>

<script type="module" src="/scripts/sign-up.js"></script>
