<div
  id="details-modal"
  role="dialog"
  aria-modal="true"
  aria-label="Show file or folder details"
  class="translate-y-full fixed bottom-0 left-0 min-h-screen w-full flex flex-col justify-end sm:justify-center bg-gray-950/10 dark:bg-gray-950/50 backdrop-blur z-[60] transition-transform duration-200"
>
  <div class="w-full max-w-md mx-auto bg-gray-50 dark:bg-gray-900 flex-grow">
    <div class="w-full flex flex-col max-h-screen">
      <!--  close button -->
      <button
        type="button"
        aria-label="Close file modal"
        class="close-modal-btn absolute top-1 right-1 p-2 hover:bg-gray-200 dark:hover:bg-gray-700 rounded-lg transition-colors"
      >
        <%- icon({ name: 'X' }) %>
      </button>

      <!-- header -->
      <div class="h-28 flex items-end pb-4 px-5">
        <h2 id="detail-name" class="text-xl font-bold line-clamp-2">
          Whatever name here Whatever name here Whatever name here Whatever name
          here Whatever name here Whatever name here
        </h2>
      </div>

      <!-- info -->
      <div class="h-[calc(100vh-176px)] px-5 pb-5 overflow-y-auto">
        <div id="detail-preview" class="flex items-center justify-center my-5">
          <%- icon({name: 'File', size: 144, strokeWidth: 1}) %>
        </div>

        <div class="flex flex-col gap-3">
          <div class="flex flex-col gap-1">
            <span class="font-semibold">Path:</span>
            <span id="detail-path" class="text-gray-700 dark:text-gray-300">
            </span>
          </div>

          <div class="flex flex-col gap-1">
            <span class="font-semibold">Size:</span>
            <span id="detail-size" class="text-gray-700 dark:text-gray-300">
              938 KB
            </span>
          </div>

          <div class="flex flex-col gap-1">
            <span class="font-semibold">Type:</span>
            <span id="detail-type" class="text-gray-700 dark:text-gray-300">
              PDF document
            </span>
          </div>

          <div id="modal-resolution-container" class="hidden flex-col gap-1">
            <span class="font-semibold">Resolution:</span>
            <span
              id="detail-resolution"
              class="text-gray-700 dark:text-gray-300"
            >
            </span>
          </div>

          <div id="modal-duration-container" class="hidden flex-col gap-1">
            <span class="font-semibold">Duration:</span>
            <span id="detail-duration" class="text-gray-700 dark:text-gray-300">
            </span>
          </div>

          <div class="flex flex-col gap-1">
            <span class="font-semibold">Date added:</span>
            <span id="detail-date" class="text-gray-700 dark:text-gray-300">
              2025-11-03
            </span>
          </div>
        </div>
      </div>

      <!-- footer -->
      <div
        class="h-16 px-5 flex items-center justify-between border-t border-gray-200 dark:border-gray-800"
      >
        <button
          id="delete-btn"
          title="Delete"
          aria-label="Delete the file"
          class="bg-gray-200 dark:bg-gray-800 p-2.5 rounded-md disabled:text-gray-500"
        >
          <span><%- icon({name: 'Trash2'}) %></span>
        </button>
        <button
          id="share-btn"
          title="Share"
          aria-label="Share the file"
          class="bg-gray-200 dark:bg-gray-800 p-2.5 rounded-md disabled:text-gray-500"
        >
          <span><%- icon({name: 'Share2'}) %></span>
        </button>
        <button
          id="download-btn"
          title="Download"
          aria-label="Download the file"
          class="bg-gray-200 dark:bg-gray-800 p-2.5 rounded-md disabled:text-gray-500"
        >
          <span><%- icon({name: 'Download'}) %></span>
        </button>
      </div>
    </div>
  </div>
</div>

<script type="module" src="/scripts/details-modal.js"></script>
