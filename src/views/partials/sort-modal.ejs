<div
  id="sort-in-modal"
  class="hidden absolute bottom-0 left-0 min-h-[90vh] w-full flex-col bg-gray-50 dark:bg-gray-900 shadow-[0_-5px_15px_rgba(0,0,0,0.1)] rounded-t-2xl p-5"
>
  <div class="flex justify-end mb-5">
    <button type="button" class="close-modal-btn">
      <%- icon({ name: 'X' }) %>
    </button>
  </div>

  <div class="flex-grow flex flex-col">
    <form action="" class="flex flex-col gap-8 flex-grow">
      <section class="flex flex-col gap-3">
        <h3 class="text-lg font-medium">Sort by</h3>

        <label
          class="group relative flex items-center justify-between cursor-pointer"
        >
          <span
            class="text-gray-700 dark:text-gray-300 dark:group-hover:text-gray-200 group-hover:text-gray-800"
          >
            Name
          </span>
          <input
            type="radio"
            name="sort-by"
            value="name"
            checked
            class="sr-only peer"
          />
          <div
            class="w-5 h-5 border border-gray-400 dark:border-gray-600 rounded-full peer-checked:border-gray-600 peer-focus:ring-2 peer-focus:ring-gray-500 transition-all"
          ></div>
          <div
            class="absolute right-[5px] top-1/2 -translate-y-1/2 w-2.5 h-2.5 bg-teal-900 dark:bg-teal-300 rounded-full -ml-4 opacity-0 peer-checked:opacity-100 transition-opacity pointer-events-none"
          ></div>
        </label>

        <label
          class="group relative flex items-center justify-between cursor-pointer"
        >
          <span
            class="text-gray-700 dark:text-gray-300 dark:group-hover:text-gray-200 group-hover:text-gray-800"
          >
            Size
          </span>
          <input
            type="radio"
            name="sort-by"
            value="size"
            class="sr-only peer"
          />
          <div
            class="w-5 h-5 border border-gray-400 dark:border-gray-600 rounded-full peer-checked:border-gray-600 peer-focus:ring-2 peer-focus:ring-gray-500 transition-all"
          ></div>
          <div
            class="absolute right-[5px] top-1/2 -translate-y-1/2 w-2.5 h-2.5 bg-teal-900 dark:bg-teal-300 rounded-full -ml-4 opacity-0 peer-checked:opacity-100 transition-opacity pointer-events-none"
          ></div>
        </label>
        <label
          class="group relative flex items-center justify-between cursor-pointer"
        >
          <span
            class="text-gray-700 dark:text-gray-300 dark:group-hover:text-gray-200 group-hover:text-gray-800"
          >
            Type
          </span>
          <input
            type="radio"
            name="sort-by"
            value="type"
            class="sr-only peer"
          />
          <div
            class="w-5 h-5 border border-gray-400 dark:border-gray-600 rounded-full peer-checked:border-gray-600 peer-focus:ring-2 peer-focus:ring-gray-500 transition-all"
          ></div>
          <div
            class="absolute right-[5px] top-1/2 -translate-y-1/2 w-2.5 h-2.5 bg-teal-900 dark:bg-teal-300 rounded-full -ml-4 opacity-0 peer-checked:opacity-100 transition-opacity pointer-events-none"
          ></div>
        </label>

        <label
          class="group relative flex items-center justify-between cursor-pointer"
        >
          <span
            class="text-gray-700 dark:text-gray-300 dark:group-hover:text-gray-200 group-hover:text-gray-800"
          >
            Date
          </span>
          <input
            type="radio"
            name="sort-by"
            value="date"
            class="sr-only peer"
          />
          <div
            class="w-5 h-5 border border-gray-400 dark:border-gray-600 rounded-full peer-checked:border-gray-600 peer-focus:ring-2 peer-focus:ring-gray-500 transition-all"
          ></div>
          <div
            class="absolute right-[5px] top-1/2 -translate-y-1/2 w-2.5 h-2.5 bg-teal-900 dark:bg-teal-300 rounded-full -ml-4 opacity-0 peer-checked:opacity-100 transition-opacity pointer-events-none"
          ></div>
        </label>
      </section>

      <section class="flex flex-col gap-3">
        <h3 id="sort-modal-direction" class="text-lg font-medium">Direction</h3>

        <label
          class="group relative flex items-center justify-between cursor-pointer"
        >
          <span
            class="text-gray-700 dark:text-gray-300 dark:group-hover:text-gray-200 group-hover:text-gray-800"
          >
            &#x2191;
          </span>
          <input
            type="radio"
            name="direction"
            value="asc"
            checked
            class="sr-only peer"
          />
          <div
            class="w-5 h-5 border border-gray-400 dark:border-gray-600 rounded-full peer-checked:border-gray-600 peer-focus:ring-2 peer-focus:ring-gray-500 transition-all"
          ></div>
          <div
            class="absolute right-[5px] top-1/2 -translate-y-1/2 w-2.5 h-2.5 bg-teal-900 dark:bg-teal-300 rounded-full -ml-4 opacity-0 peer-checked:opacity-100 transition-opacity pointer-events-none"
          ></div>
        </label>

        <label
          class="group relative flex items-center justify-between cursor-pointer"
        >
          <span
            class="text-gray-700 dark:text-gray-300 dark:group-hover:text-gray-200 group-hover:text-gray-800"
          >
            &#x2193;
          </span>
          <input
            type="radio"
            name="direction"
            value="desc"
            class="sr-only peer"
          />
          <div
            class="w-5 h-5 border border-gray-400 dark:border-gray-600 rounded-full peer-checked:border-gray-600 peer-focus:ring-2 peer-focus:ring-gray-500 transition-all"
          ></div>
          <div
            class="absolute right-[5px] top-1/2 -translate-y-1/2 w-2.5 h-2.5 bg-teal-900 dark:bg-teal-300 rounded-full -ml-4 opacity-0 peer-checked:opacity-100 transition-opacity pointer-events-none"
          ></div>
        </label>
      </section>

      <div class="flex items-center justify-between mt-auto">
        <button
          type="submit"
          class="text-gray-50 bg-gray-950 dark:bg-gray-200 dark:text-gray-950 w-full py-3 rounded-lg font-medium"
        >
          Apply
        </button>
      </div>
    </form>
  </div>
</div>
