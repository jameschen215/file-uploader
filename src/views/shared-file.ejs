<div class="flex-grow flex items-center justify-center p-10">
  <div
    class="w-full max-w-screen-lg h-[75vh] flex flex-col rounded-sm bg-gray-100 dark:bg-gray-900 border border-gray-200 dark:border-gray-800 p-2"
  >
    <!-- File Preview -->
    <div class="flex-grow flex items-center justify-center bg-gray-950">
      <% if (file.mimeType.startsWith('image/')) { %>
      <img
        src="/share/file/<%= shareToken %>/preview"
        alt="<%= file.originalName %>"
      />
      <% } else if (file.mimeType.startsWith('video/')) { %>
      <video controls style="max-width: 100%; border-radius: 4px">
        <source
          src="/share/file/<%= shareToken %>/preview"
          type="<%= file.mimeType %>"
        />
        You browser does't support video playback.
      </video>
      <% } else { %>
      <div class="text-gray-700">
        <%- icon({name: 'File', size: 128, strokeWidth: 1}) %>
      </div>
      <% } %>
    </div>

    <div class="sm:flex sm:items-center sm:justify-between sm:gap-2">
      <!-- File Name and Size -->
      <div class="flex items-baseline gap-2 py-2 my-1 sm:min-w-0">
        <p class="flex items-center min-w-0 w-full">
          <span class="min-w-0 truncate">
            <%= file.originalName.split('.')[0] %>
          </span>
          <span class="shrink-0">.<%= file.originalName.split('.')[1] %></span>
        </p>
        <span class="shrink-0 text-sm text-gray-500"><%= file.fileSize %></span>
      </div>

      <!-- Download Button -->
      <div class="mt-1">
        <a
          href="/share/file/<%= shareToken %>/download"
          class="flex items-center justify-center w-full px-8 bg-lime-600 hover:bg-lime-500 py-2 outline-none text-gray-50 font-medium rounded-sm cursor-pointer transition-colors duration-200 focus:ring-2 focus:ring-neutral-400 focus:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed"
        >
          Download
        </a>
      </div>
    </div>
  </div>
</div>
