<main class="relative w-full max-w-7xl mx-auto">
  <!-- background -->
  <div
    class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 aspect-square text-gray-100 dark:text-gray-800/25 -z-10"
    style="width: min(90vw, 90vh)"
  >
    <%- include('icons/frown') %>
  </div>

  <!-- 1280px container -->
  <div
    class="min-h-[calc(100vh-64px)] w-full flex flex-col items-center justify-center gap-10 px-4 text-gray-950 dark:text-gray-50"
  >
    <h1 class="-mt-20 text-6xl md:text-9xl font-extrabold">
      <%= statusCode %>
    </h1>

    <p class="md:text-2xl font-bold"><%= message %></p>
  </div>
</main>
