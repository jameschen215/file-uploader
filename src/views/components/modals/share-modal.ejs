<div
  id="share-modal"
  role="dialog"
  tabindex="-1"
  aria-modal="true"
  aria-label="Generate and show share link"
  class="translate-y-full fixed bottom-0 left-0 min-h-screen w-full flex flex-col justify-end sm:justify-center bg-zinc-950/10 dark:bg-zinc-950/50 backdrop-blur z-[80] transition-transform duration-200"
>
  <div
    class="w-full max-w-lg mx-auto bg-zinc-50 dark:bg-zinc-900 shadow-[0_-5px_15px_rgba(0,0,0,0.1)] rounded-t-2xl sm:rounded-2xl px-5 py-5"
  >
    <div class="flex flex-col flex-grow relative">
      <!-- Header with close button -->
      <div class="flex justify-between items-center mb-5">
        <h2 class="text-xl font-bold">Share link</h2>

        <button
          type="button"
          aria-label="Close share modal"
          class="close-modal-btn p-1 sm:opacity-50 sm:hover:opacity-100 transition-all rounded-full focus-visible:outline-none focus-visible:border-none focus-visible:ring-2 focus-visible:ring-zinc-400"
        >
          <%- icon({ name: 'X' }) %>
        </button>
      </div>

      <!-- Share Result -->
      <div class="flex flex-col gap-4">
        <!-- File name -->
        <div>
          <span
            id="share-name"
            class="text-zinc-700 dark:text-zinc-300 truncate"
          >
            <!-- File name here -->
            File name
          </span>
        </div>

        <!-- Share link -->
        <div>
          <input
            type="text"
            id="share-url"
            tabindex="-1"
            readonly
            value="Generating share link..."
            class="w-full border border-zinc-300 text-zinc-600 dark:text-zinc-400 dark:border-zinc-700 dark:bg-zinc-800 px-3 py-2 outline-none rounded-sm transition-colors truncate"
          />
        </div>

        <div>
          <p class="text-zinc-400 dark:text-zinc-500 text-sm">
            Anyone with this link can view and download.
          </p>
        </div>

        <div>
          <p id="share-error" class="hidden text-red-500">Share error</p>
        </div>

        <div class="flex sm:justify-end my-2">
          <button
            id="copy-link-btn"
            type="button"
            class="w-full sm:w-fit px-6 bg-zinc-800 text-zinc-100 dark:text-zinc-900 dark:bg-zinc-200 hover:bg-zinc-800 dark:hover:bg-zinc-300 py-2 outline-none font-medium rounded-md cursor-pointer transition-colors duration-200 disabled:opacity-50 disabled:cursor-not-allowed focus-visible:outline-none focus-visible:border-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-zinc-400 dark:focus-visible:ring-offset-zinc-900"
          >
            Copy link
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="module" src="/scripts/components/modals/share-modal.js"></script>
