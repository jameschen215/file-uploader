<div
    id="sort-modal"
    role="dialog"
    aria-modal="true"
    tabindex="-1"
    aria-label="Sort files or create folders on mobile"
    class="translate-y-full fixed bottom-0 left-0 min-h-screen w-full flex flex-col justify-end sm:justify-center bg-zinc-950/10 dark:bg-zinc-950/50 backdrop-blur z-[60] transition-transform duration-200"
  >
<div
  class="absolute bottom-0 left-0 min-h-[90vh] w-full flex-col bg-zinc-50 dark:bg-zinc-900 shadow-[0_-5px_15px_rgba(0,0,0,0.1)] rounded-t-2xl p-5"
  >
    <div class="flex justify-end mb-5">
      <button 
        type="button" 
        aria-label="Close sort modal"
        class="close-modal-btn p-1 sm:opacity-50 sm:hover:opacity-100 transition-all rounded-full focus-visible:outline-none focus-visible:border-none focus-visible:ring-2 focus-visible:ring-zinc-400"
      >       
        <%- icon({ name: 'X' }) %>
      </button>
    </div>

    <div class="flex-grow flex flex-col">
      <form action="" class="flex flex-col gap-8 flex-grow">
        <section class="flex flex-col gap-3">
          <h3 class="text-lg font-medium">Sort by</h3>

          <label
            class="group relative flex items-center justify-between cursor-pointer"
          >
            <span
              class="text-zinc-700 dark:text-zinc-300 dark:group-hover:text-zinc-200 group-hover:text-zinc-800"
            >
              Name
            </span>
            <!-- prettier-ignore-start -->
            <input
              type="radio"
              name="sortBy"
              value="name"
              <%= locals.sortBy && sortBy === 'name' ? 'checked' : ''%>
              class="sr-only peer"
            />
            <!-- prettier-ignore-end -->
            <div
              class="w-5 h-5 border border-zinc-400 rounded-full peer-checked:border-zinc-600 dark:peer-checked:border-zinc-300 peer-focus-visible:ring-2 peer-focus-visible:ring-offset-2 peer-focus-visible:ring-zinc-400 dark:peer-focus-visible:ring-offset-zinc-900 transition-all"
            ></div>
            <div
              class="absolute right-[5px] top-1/2 -translate-y-1/2 w-2.5 h-2.5 bg-sky-600 dark:bg-sky-400 rounded-full -ml-4 opacity-0 peer-checked:opacity-100 transition-opacity pointer-events-none"
            ></div>
          </label>

          <label
            class="group relative flex items-center justify-between cursor-pointer"
          >
            <span
              class="text-zinc-700 dark:text-zinc-300"
            >
              Type
            </span>
            <!-- prettier-ignore-start -->
            <input
              type="radio"
              name="sortBy"
              value="type"
              <%= locals.sortBy && sortBy === 'type' ? 'checked' : ''%>
              class="sr-only peer"
            />
            <!-- prettier-ignore-end -->
             <div
              class="w-5 h-5 border border-zinc-400 rounded-full peer-checked:border-zinc-600 dark:peer-checked:border-zinc-300 peer-focus-visible:ring-2 peer-focus-visible:ring-offset-2 peer-focus-visible:ring-zinc-400 dark:peer-focus-visible:ring-offset-zinc-900 transition-all"
            ></div>
            <div
              class="absolute right-[5px] top-1/2 -translate-y-1/2 w-2.5 h-2.5 bg-sky-600 dark:bg-sky-400 rounded-full -ml-4 opacity-0 peer-checked:opacity-100 transition-opacity pointer-events-none"
            ></div>
          </label>

          <label
            class="group relative flex items-center justify-between cursor-pointer"
          >
            <span
              class="text-zinc-700 dark:text-zinc-300 dark:group-hover:text-zinc-200 group-hover:text-zinc-800"
            >
              Size
            </span>
            <input type="radio" name="sortBy" value="size" class="sr-only peer" 
              <%= locals.sortBy && sortBy === 'size' ? 'checked' : ''%>
            />
            
             <div
              class="w-5 h-5 border border-zinc-400 rounded-full peer-checked:border-zinc-600 dark:peer-checked:border-zinc-300 peer-focus-visible:ring-2 peer-focus-visible:ring-offset-2 peer-focus-visible:ring-zinc-400 dark:peer-focus-visible:ring-offset-zinc-900 transition-all"
            ></div>
            <div
              class="absolute right-[5px] top-1/2 -translate-y-1/2 w-2.5 h-2.5 bg-sky-600 dark:bg-sky-400 rounded-full -ml-4 opacity-0 peer-checked:opacity-100 transition-opacity pointer-events-none"
            ></div>
          </label>

          <label
            class="group relative flex items-center justify-between cursor-pointer"
          >
            <span
              class="text-zinc-700 dark:text-zinc-300 dark:group-hover:text-zinc-200 group-hover:text-zinc-800"
            >
              Date
            </span>
            <input type="radio" name="sortBy" value="date" class="sr-only peer" 
              <%= locals.sortBy && sortBy === 'date' ? 'checked' : ''%>
            />
             <div
              class="w-5 h-5 border border-zinc-400 rounded-full peer-checked:border-zinc-600 dark:peer-checked:border-zinc-300 peer-focus-visible:ring-2 peer-focus-visible:ring-offset-2 peer-focus-visible:ring-zinc-400 dark:peer-focus-visible:ring-offset-zinc-900 transition-all"
            ></div>
            <div
              class="absolute right-[5px] top-1/2 -translate-y-1/2 w-2.5 h-2.5 bg-sky-600 dark:bg-sky-400 rounded-full -ml-4 opacity-0 peer-checked:opacity-100 transition-opacity pointer-events-none"
            ></div>
          </label>
        </section>

        <section class="flex flex-col gap-3">
          <h3 id="sort-modal-direction" class="text-lg font-medium">Direction</h3>

          <label
            class="group relative flex items-center justify-between cursor-pointer"
          >
            <span
              class="text-zinc-700 dark:text-zinc-300 dark:group-hover:text-zinc-200 group-hover:text-zinc-800"
            >
              &#x2191;
            </span>
            <!-- prettier-ignore-start -->
            <input
              type="radio"
              name="sortDirection"
              value="asc"
              <%= locals.direction && direction === 'asc' ? 'checked' : ''%>
              class="sr-only peer"
            />
            <!-- prettier-ignore-end -->
             <div
              class="w-5 h-5 border border-zinc-400 rounded-full peer-checked:border-zinc-600 dark:peer-checked:border-zinc-300 peer-focus-visible:ring-2 peer-focus-visible:ring-offset-2 peer-focus-visible:ring-zinc-400 dark:peer-focus-visible:ring-offset-zinc-900 transition-all"
            ></div>
            <div
              class="absolute right-[5px] top-1/2 -translate-y-1/2 w-2.5 h-2.5 bg-sky-600 dark:bg-sky-400 rounded-full -ml-4 opacity-0 peer-checked:opacity-100 transition-opacity pointer-events-none"
            ></div>
          </label>

          <label
            class="group relative flex items-center justify-between cursor-pointer"
          >
            <span
              class="text-zinc-700 dark:text-zinc-300 dark:group-hover:text-zinc-200 group-hover:text-zinc-800"
            >
              &#x2193;
            </span>
            <input
              type="radio"
              name="sortDirection"
              value="desc"
              class="sr-only peer"
              <%= locals.direction && direction === 'desc' ? 'checked' : ''%>
            />
             <div
              class="w-5 h-5 border border-zinc-400 rounded-full peer-checked:border-zinc-600 dark:peer-checked:border-zinc-300 peer-focus-visible:ring-2 peer-focus-visible:ring-offset-2 peer-focus-visible:ring-zinc-400 dark:peer-focus-visible:ring-offset-zinc-900 transition-all"
            ></div>
            <div
              class="absolute right-[5px] top-1/2 -translate-y-1/2 w-2.5 h-2.5 bg-sky-600 dark:bg-sky-400 rounded-full -ml-4 opacity-0 peer-checked:opacity-100 transition-opacity pointer-events-none"
            ></div>
          </label>
        </section>

        <div class="flex items-center justify-between mt-auto">
          <button
            type="submit"
            class="text-zinc-50 bg-zinc-900 dark:bg-zinc-200 dark:text-zinc-950 w-full py-2.5 rounded-sm font-medium focus-visible:outline-none focus-visible:border-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-zinc-400 dark:focus-visible:ring-offset-zinc-900"
          >
            Apply
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<script type="module" src="/scripts/components/modals/sort-modal.js"></script>