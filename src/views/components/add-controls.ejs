<!-- Create folder button and upload file button - hidden on search route -->

<% if (!locals.currentPath.includes('search')) { %>

<div class="hidden sm:flex items-center gap-4 h-16">
  <button
    type="button"
    aria-expanded="false"
    class="upload-modal-trigger flex items-center justify-center gap-1 py-1.5 px-4 rounded-md font-normal border border-transparent text-zinc-950 bg-yellow-400 hover:bg-yellow-400/80 dark:text-zinc-900 dark:bg-yellow-400 dark:hover:bg-amber-300 transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-zinc-400 dark:focus-visible:ring-offset-zinc-900"
  >
    <span><%- icon({name: 'ArrowUp', size: 18}) %></span>
    <span>Upload</span>
  </button>
  <button
    type="button"
    aria-expanded="false"
    class="folder-form-modal-trigger flex items-center justify-center gap-1 py-1.5 px-3 rounded-md font-normal border border-zinc-200 text-zinc-950 dark:border-zinc-700 dark:text-zinc-50 hover:bg-zinc-50 hover:border-zinc-300 dark:hover:bg-zinc-800/20 dark:hover:border-zinc-600 transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-zinc-400 dark:focus-visible:ring-offset-zinc-900"
  >
    <span><%- icon({name: 'FolderPlus', size: 18}) %></span>
    <span>New folder</span>
  </button>
</div>

<% } %>
