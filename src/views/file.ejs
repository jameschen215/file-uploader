<div class="w-full flex-grow flex flex-col">
  <div class="flex-grow flex flex-col gap-4 px-5 py-5">
    <!-- Header with actions -->
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-bold truncate"><%= file.originalName %></h1>
    </div>

    <div class="grid md:grid-cols-3 gap-6">
      <!-- Main content (2/3 width) -->
      <div class="md:col-span-2">
        <!-- Large preview -->
        <div class="bg-gray-100 rounded-lg p-4">
          <!-- Image/Video/PDF preview here -->
        </div>
      </div>

      <!-- Sidebar (1/3 width) -->
      <div class="space-y-6">
        <!-- File Info Card -->
        <div class="bg-white rounded-lg shadow p-4">
          <h3 class="font-semibold mb-3">File Information</h3>
          <dl class="space-y-2 text-sm">
            <div>
              <dt class="text-gray-500">Type</dt>
              <dd><%= file.mimeType %></dd>
            </div>
            <div>
              <dt class="text-gray-500">Size</dt>
              <dd><%= formatSize(file.fileSize) %></dd>
            </div>
            <div>
              <dt class="text-gray-500">Uploaded</dt>
              <dd><%= locals.formatDate(file.uploadedAt, 'yyyy-MM-dd') %></dd>
            </div>
            <% if (file.width && file.height) { %>
            <div>
              <dt class="text-gray-500">Dimensions</dt>
              <dd>
                <%= file.width %>
                Ã—
                <%= file.height %>
              </dd>
            </div>
            <% } %>
          </dl>
        </div>

        <!-- Share Card -->
        <div class="bg-white rounded-lg shadow p-4">
          <div class="flex justify-between gap-2">
            <button>Download</button>
            <button>Share</button>
            <button>Delete</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
