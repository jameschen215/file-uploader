<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="A stripped down version of personal storage service like Google Drive."
    />

    <!-- favicon -->

    <!-- styles -->
    <link rel="stylesheet" href="/styles/build.css" />

    <title>File Uploader</title>
  </head>
  <body
    class="bg-gray-50 dark:bg-gray-900 text-gray-900 dark:text-gray-50 relative"
  >
    <!-- Skip to main content link for keyboard navigation -->
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:px-4 focus:py-2 focus:bg-blue-500 focus:text-white focus:rounded"
    >
      Skip to main content
    </a>

    <!-- Site wrapper -->
    <div id="site-container" class="relative min-h-screen flex flex-col">
      <!-- Header -->
      <header
        class="fixed top-0 left-0 w-full bg-gray-50 dark:bg-gray-900 z-40"
      >
        <%- include('partials/navbar') %>
        <%- include('partials/sub-header') %>
      </header>

      <!-- page content -->
      <main
        id="main-content"
        class="w-full max-w-7xl mx-auto flex-grow flex flex-col mt-[112px] sm:mt-[176px]"
      >
        <%- body %>
      </main>

      <!-- Add button -->
      <% if (locals.currentUser) { %>
      <button
        id="add-modal-btn"
        type="button"
        class="fixed sm:hidden bottom-5 right-5 size-10 flex items-center justify-center rounded-md bg-gray-900 dark:bg-gray-50 text-gray-50 dark:text-gray-900"
      >
        <%- icon({ name: 'Plus' }) %>
      </button>
      <% } %>
    </div>

    <!-- Search modal -->
    <%- include('partials/search-modal') %>

    <!-- Sort modal -->
    <%- include('partials/sort-modal') %>

    <!-- Add modal -->
    <%- include('partials/add-modal') %>

    <!-- Folder modal -->
    <%- include('partials/folder-modal') %>

    <!-- GENERAL MODAL -->
    <div
      id="modal"
      role="dialog"
      aria-modal="true"
      aria-label="Upload files or create folders"
      class="translate-y-full fixed bottom-0 left-0 min-h-screen w-full bg-gray-950/10 dark:bg-gray-950/50 backdrop-blur z-[60] transition-transform duration-200"
    ></div>

    <!-- scripts -->
    <script type="module" src="/scripts/main.js"></script>
    <script type="module" src="/scripts/header.js"></script>
    <script type="module" src="/scripts/modal.js"></script>
  </body>
</html>
