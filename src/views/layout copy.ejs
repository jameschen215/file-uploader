<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="A stripped down version of personal storage service like Google Drive."
    />

    <!-- favicon -->

    <!-- styles -->
    <link rel="stylesheet" href="/styles/build.css" />

    <title>File Uploader</title>
  </head>
  <body
    class="h-screen overflow-hidden bg-gray-50 dark:bg-gray-900 text-gray-900 dark:text-gray-50 relative"
  >
    <!-- Skip to main content link for keyboard navigation -->
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:px-4 focus:py-2 focus:bg-blue-500 focus:text-white focus:rounded"
    >
      Skip to main content
    </a>

    <!-- Site wrapper -->
    <div id="site-container" class="relative h-full flex flex-col">
      <!-- Header -->
      <%- include('partials/header')  %>

      <header
        class="fixed top-0 left-0 w-full bg-gray-50 dark:bg-gray-900 z-40"
      >
        <%- include('partials/navbar') %>

        <% if (locals.currentUser) { %>
        <%- include('partials/sub-header') %>
        <% } %>
      </header>

      <!-- page content -->
      <main
        id="main-content"
        class="w-full max-w-7xl mx-auto flex-grow min-h-0 flex flex-col <%= locals.currentUser ? 'mt-[112px] sm:mt-[176px]' : 'mt-16' %>"
      >
        <%- body %>
      </main>

      <!-- Add button -->
      <% if (locals.currentUser) { %>
      <button
        id="add-btn-for-mobile"
        type="button"
        aria-controls="modal"
        aria-expanded="false"
        class="add-modal-trigger fixed sm:hidden bottom-5 right-5 size-10 flex items-center justify-center rounded-md bg-gray-900 dark:bg-gray-50 text-gray-50 dark:text-gray-900"
      >
        <%- icon({ name: 'Plus' }) %>
      </button>
      <% } %>
    </div>

    <!-- MODALS -->
    <% if (locals.currentUser) { %>
    <!-- Search modal -->
    <%- include('partials/search-modal') %>

    <!-- Sort modal -->
    <%- include('partials/sort-modal') %>

    <!-- Add modal -->
    <%- include('partials/add-modal') %>

    <!-- folder modal -->
    <%- include('partials/folder-form-modal', {currentFolder: locals.currentFolder || null}) %>

    <!-- upload modal -->
    <%- include('partials/upload-modal') %>

    <!-- file details modal -->
    <%- include('partials/file-details-modal') %>

    <!-- folder details modal -->
    <%- include('partials/folder-details-modal') %>

    <!-- share modal -->
    <%- include('partials/share-modal') %>
    <% } %>

    <!-- scripts -->
    <script type="module" src="/scripts/header.js"></script>
    <script type="module" src="/scripts/main.js"></script>
    <script type="module" src="/scripts/search-desktop.js"></script>
  </body>
</html>
