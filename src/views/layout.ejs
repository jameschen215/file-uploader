<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="A stripped down version of personal storage service like Google Drive."
    />

    <!-- favicon -->

    <!-- styles -->
    <link rel="stylesheet" href="/styles/build.css" />

    <title>File Uploader</title>
  </head>
  <body
    class="relative h-screen overflow-hidden bg-zinc-50 dark:bg-zinc-900 text-zinc-900 dark:text-zinc-50"
  >
    <!-- Skip to main content link for keyboard navigation -->
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:px-4 focus:py-2 focus:bg-blue-500 focus:text-white focus:rounded"
    >
      Skip to main content
    </a>

    <!-- Site wrapper -->
    <div id="site-container" class="relative h-screen flex flex-col">
      <!-- Header -->
      <%- include('partials/header')  %>

      <!-- page content -->
      <main
        id="main-content"
        class="w-full max-w-7xl mx-auto flex-grow min-h-0 flex flex-col <%= locals.currentUser && !locals.currentPath.includes('/share/') ? 'mt-[112px] sm:mt-[176px]' : 'mt-16' %>"
      >
        <%- body %>
      </main>

      <!-- Add button -->
      <% if (locals.currentUser) { %>
      <button
        id="add-btn-for-mobile"
        type="button"
        aria-controls="modal"
        aria-expanded="false"
        class="add-modal-trigger fixed sm:hidden bottom-5 right-5 size-10 flex items-center justify-center rounded-full text-zinc-50 bg-lime-500 focus-visible:outline-none focus-visible:border-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-zinc-400 dark:focus-visible:ring-offset-zinc-900"
      >
        <%- icon({ name: 'Plus', size:20 }) %>
      </button>
      <% } %>
    </div>

    <!-- Modals -->
    <%- include('partials/modals') %>

    <!-- Toast -->
    <%- include('components/toast') %>
  </body>
</html>
