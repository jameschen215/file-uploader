{
  "name": "file-uploader",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run build:css\" \"tsx --watch src/index.ts\"",
    "build:css": "postcss ./src/public/styles/styles.css -o ./src/public/styles/build.css --watch",
    "build:css:once": "postcss ./src/public/styles/styles.css -o ./src/public/styles/build.css ",
    "build": "tsc && npm run build:css:once && cp -r src/views dist/src/views && cp -r src/public dist/src/public",
    "start": "node dist/src/index.js",
    "build:start": "npm run build && npm run start",
    "seed": "tsx prisma/seed.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jameschen215/file-uploader.git"
  },
  "keywords": [],
  "author": "James Chen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jameschen215/file-uploader/issues"
  },
  "homepage": "https://github.com/jameschen215/file-uploader#readme",
  "description": "An assignment project from The Odin Project to build a stripped down version of Google Drive.",
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "@quixo3/prisma-session-store": "^3.1.13",
    "@supabase/supabase-js": "^2.75.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.2",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-ejs-layouts": "^2.5.1",
    "express-session": "^1.18.2",
    "express-validator": "^7.2.1",
    "fluent-ffmpeg": "^2.1.3",
    "helmet": "^8.1.0",
    "lucide-static": "^0.544.0",
    "method-override": "^3.0.0",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "sharp": "^0.34.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.3",
    "@types/express-ejs-layouts": "^2.5.4",
    "@types/express-session": "^1.18.2",
    "@types/fluent-ffmpeg": "^2.1.28",
    "@types/helmet": "^0.0.48",
    "@types/method-override": "^3.0.0",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.5.2",
    "@types/passport-local": "^1.0.38",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "prettier": "^3.6.2",
    "prettier-plugin-ejs": "^1.0.3",
    "prisma": "^6.16.2",
    "tailwind-scrollbar": "^3.1.0",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
